<?xml version="1.0" encoding="UTF-8"?>

<phpunit    bootstrap="test.bootstrap.inc.php"
            backupGlobals="false"
            backupStaticAttributes="false"
            syntaxCheck="false"
            forceCoversAnnotation="true"
            mapTestClassNameToCoveredClassName="true"
            colors="true">
    <testsuites>
        <testsuite name="Lunr Testsuite">
            <filter>
                <whitelist>
                    <directory suffix=".php">system</directory>
                </whitelist>
            </filter>
        </testsuite>
    </testsuites>
    <logging>
        <log    type="coverage-html"
                target="../coverage"
                charset="UTF-8"
                yui="true"
                highlight="false"
                lowUpperBound="35"
                highLowerBound="70"/>
    </logging>
</phpunit>
